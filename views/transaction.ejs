<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card">
                <h5 class="card-header info-color white-text text-center py-4">
                    <strong>Payment</strong>
                </h5>
                <div class="card-body px-lg-5 pt-0">
                    <form action='/account' method='POST' class="text-center mt-3" style="color: #757575;">
                        <div class="form-row">
                            <div class="col input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">$</span>
                                </div>
                                <input id='amount' class='form-control' type="number" name="amount" placeholder="40" required>
                                <select class='form-control' name='currency'>
                                    <option value="CAD">CAD</option>
                                    <option value="USD">USD</option>
                                </select>
                            </div>
                        </div>
            
                        <div class="md-form mt-3">
                            <label for="materialRegisterFormEmail">Users ID</label>
                            <input class='form-control' type="text" name="to" placeholder='Users ID' required>
                        </div>
            
                        <div class="md-form mt-3">
                            <label for="materialRegisterFormPassword">Notes</label>
                            <input id="notes" class='form-control' type="text" maxlength="60" name="notes" placeholder="Add a Note!">
                        </div>
                        
                        <button id='createTransaction' class="btn bg-warning btn-outline-warning btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Make a Payment</button>
                    
                        <input type="hidden" name="from" value='<%= currentUser._id %>''>
                        <input type="hidden" name="fullDate" value= '<%= new Date() %>'>
                        <input type="hidden" name="date" value='<%= new Date().toLocaleString().split(',')[0] %>'>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>